			17.9px 16.3px 22.9px -2.9px hsl(var(--shadow-color) / 0.15),
			25.4px 23.1px 32.4px -3.3px hsl(var(--shadow-color) / 0.13),
			35.1px 31.9px 44.8px -3.7px hsl(var(--shadow-color) / 0.12);
	}

	html {
		font-family: Inter, system-ui, sans-serif;
		line-height: 1.5;
		font-size: 14px;
	}

	@media (min-width: 1044px) {
		html {
			font-size: 16px;
		}
	}

	body {
		margin: 0;
		background-color: #EEF0FF;
		padding-inline: 20px;
		padding-bottom: 20px;
	}

	body::after {
		content: "";
		display: block;
		height: 33vh;
		background-image: linear-gradient(
			180deg,
			hsl(233deg 100% 97%) 0%,
			hsl(233deg 100% 94%) 21%,
			hsl(233deg 100% 91%) 30%,
			hsl(234deg 100% 88%) 39%,
			hsl(234deg 100% 86%) 46%,
			hsl(234deg 100% 83%) 54%,
			hsl(234deg 100% 80%) 61%,
			hsl(234deg 100% 77%) 69%,
			hsl(234deg 100% 74%) 79%,
			hsl(233deg 100% 71%) 100%
		);
		position: fixed;
		bottom: 0;
		left: 0;
		width: 100%;
		z-index: -1;
		mix-blend-mode: color-burn;
	}

	h1 {
		margin: 0;
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
	}

	p.description {
		font-weight: 700;
		margin: 0;
		color: var(--blue-500);
	}

	*:focus-visible {
		outline: 1px dashed var(--blue-500);
		outline-offset: 2px;
	}
</style>

<style>
	header {
		padding-block: 20px;
		display: grid;
		gap: 7px;
		align-items: center;
		margin-inline: auto;
	}

	main {
		background-color: white;
		border-radius: 12px;
		padding: 50px;
		max-width: 1128px;
		margin-inline: auto;
		box-shadow: var(--shadow-elevation-medium);
	}

	@media (min-width: 1044px) {
		header {
			grid-template-columns: auto minmax(0, 1fr) auto;
			grid-gap: 40px;
			justify-content: start;
		}
		
		:root {
			--total: min(max(1000px, 85%), 1400px);
		}
		header {
			padding-block: 40px;
			max-width: var(--total);
		}

		main {
			max-width: calc(var(--total) - 310px);
		}
		nav ul {
			grid-auto-flow: column;
			justify-content: start;
		}

		nav a, .to-ff {
			padding: 8px 20px 9px;
		}

		.site-brand {
			justify-self: auto;
			margin-bottom: 0;
		}

		

	}

	nav ul {
		display: grid;
		grid-gap: 7px;
		list-style: none;
		margin: 0;
		padding: 0;
	}
	
	nav a, .to-ff {
		display: block;
		border-radius: var(--border-radius);
		border: 1px solid var(--blue-500);
		color: var(--blue-500);
		text-decoration: none;
		padding: 8px 20px;
		font-weight: 700;
		font-size: 0.875rem;
		text-align: center;
	}

	nav a.active {
		background-color: var(--blue-500);
		color: white;
	}

	a.to-ff {
		background-color: white;
	}

	.site-brand {
		line-height: 1;
		align-self: center;
		font-size: 0;
		border-radius: var(--border-radius);
		justify-self: center;
		margin-bottom: 1rem;
	}
	
	.site-brand:focus-visible {
		outline-offset: 4px;
	}

	header .left a {
